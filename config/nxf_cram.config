includeConfig 'nxf_vcf.config'

env {
  CMD_DEEPVARIANT="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/deepvariant_1.4.0.sif /opt/deepvariant/bin/run_deepvariant"
  CMD_PEPPER_DEEPVARIANT="apptainer exec --bind \${TMPDIR} /groups/solve-rd/tmp10/projects/vip_dev/nanopore/images/pepper_deepvariant-0.8.sif /opt/deepvariant/bin/run_deepvariant" //FIXME
  CMD_DEEPTRIO="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/deepvariant_deeptrio-1.4.0.sif /opt/deepvariant/bin/deeptrio/run_deeptrio"
}

process {
  withName: 'deepvariant_call|deeptrio_call|deeptrio_call_duo_father|deeptrio_call_duo_mother|pepper_deepvariant_call' {
    cpus = 4
    memory = '8GB'
    time = '12h'
  }
}