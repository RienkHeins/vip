includeConfig 'nxf_vcf.config'

env {
  CMD_CLAIR3="apptainer exec --bind \${TMPDIR} ${APPTAINER_CACHEDIR}/clair3-v0.1-r12.sif /opt/bin/run_clair3.sh"
}

params {
  cram {
    clair3 {
      illumina {
        model_name="ilmn"
      }
      nanopore {
        model_name="r941_prom_sup_g5014"
      }
    }
  }
}

process {
  withName: 'clair3_call' {
    cpus = 4
    memory = '8GB'
    time = '5h'
  }
}
