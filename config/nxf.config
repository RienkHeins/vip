env {
  VIP_VERSION = "5.0.0"

  TMPDIR = "\${TMPDIR:-\${NXF_TEMP:-\$(mktemp -d)}}"
  SINGULARITY_BIND = "${SINGULARITY_BIND}"
  SINGULARITY_DISABLE_CACHE = "True"
  SINGULARITY_TMPDIR = "\${TMPDIR}"
}

process {
  cpus = 4
  memory = '4GB'
  time = '4h'
}

profiles {
  standard {
    process.executor = 'local'
  }

  cluster {
    process.executor = 'slurm'
  }
}
